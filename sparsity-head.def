Bootstrap: localimage
From: sparsity-base.sif

%files
    requirements.txt
    build_env.sh

%post
    export DEBIAN_FRONTEND=noninteractive

    python3 -m venv /opt/venv
    . /opt/venv/bin/activate

    cat requirements.txt
    ./build_env.sh
    /sbin/ldconfig

%runscript
    . /opt/venv/bin/activate
    $@
